WindowManager:
    FirstWindow:
    SecondWindow:
    ThirdWindow:
    AboutWindow:
    FlowerPredictionWindow:
    LeafPredictionWindow:

<FirstWindow>:
    name: "first"
    BoxLayout:

        orientation:"vertical"
        size: root.width,root.height

        padding:50
        spacing:30

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'background.jpg'

        Label:
            text: "KNOW YOUR PLANT"
            font_size: 35
            # Text Properties
            color:(255/255.0,153/255.0,204/255.0,0.5)
            bold: True
            outline_color: (0/255.0,0/255.0,0/255.0,0.5)
            outline_width:3

        Button:
            text: "Predict Flower Species"
            font_size: 25
            background_normal: ''
            background_color:(153/255.0,153/255.0,0/255.0,0.5)
            color:(102/255.0,51/255.0,0/255.0,0.5)
            bold: True
            outline_color: (0/255.0,0/255.0,0/255.0,0.5)
            outline_width:3
            on_release: 
                app.root.current = "second"
                root.manager.transition.direction= "left"
        Button:
            text: "Predict Leaf Species"
            font_size: 25
            background_normal: ''
            background_color:(153/255.0,153/255.0,0/255.0,0.5)
            color:(102/255.0,51/255.0,0/255.0,0.5)
            bold: True
            outline_color: (0/255.0,0/255.0,0/255.0,0.5)
            outline_width:3
            on_release: 
                app.root.current = "third"
                root.manager.transition.direction= "left"

        Button:
            text: "About"
            font_size: 25
            background_normal: ''
            background_color:(153/255.0,153/255.0,0/255.0,0.5)
            color:(102/255.0,51/255.0,0/255.0,0.5)
            bold: True
            outline_color: (0/255.0,0/255.0,0/255.0,0.5)
            outline_width:3
            on_release: 
                app.root.current = "about"
                root.manager.transition.direction= "left"

<SecondWindow>:
    name: "second"
    id:second

    TextInput: 
        id: text_input
    
    BoxLayout:

        orientation:"vertical"
        size: root.width,root.height

        padding:50
        spacing:30

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'plain_background.jpg'

        Label:
            text: "FLOWER SPECIES CLASSIFIER"
            font_size: 25
            # Text Properties
            color:(255/255.0,153/255.0,204/255.0,0.5)
            bold: True
            outline_color: (0/255.0,0/255.0,0/255.0,0.5)
            outline_width:3

        Button:
            text: "Upload"
            font_size: 25
            background_normal: ''
            background_color:(153/255.0,153/255.0,0/255.0,0.5)
            color:(102/255.0,51/255.0,0/255.0,0.5)
            bold: True
            outline_color: (0/255.0,0/255.0,0/255.0,0.5)
            outline_width:3
            on_release:
                app.root.get_screen("FlowerPredictionWindow").selected() 
                

        Button:
            text: "Predict"
            font_size: 25
            background_normal: ''
            background_color:(153/255.0,153/255.0,0/255.0,0.5)
            color:(102/255.0,51/255.0,0/255.0,0.5)
            bold: True
            outline_color: (0/255.0,0/255.0,0/255.0,0.5)
            outline_width:3
            on_release: 
                app.root.current = "FlowerPredictionWindow"
                root.manager.transition.direction= "left"            

