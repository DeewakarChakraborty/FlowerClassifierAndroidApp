<MyLayout>:
    id:my_widget
    BoxLayout:

        orientation:"vertical"
        size: root.width,root.height

        padding:50
        spacing:30

        Label:
            text: "FLOWER SPECIES CLASSIFICATION APP"
            font_size: 35
            # Text Properties
            color:(255/255.0,153/255.0,204/255.0,0.5)
            bold: True
            outline_color: (0/255.0,0/255.0,0/255.0,0.5)
            outline_width:3

        Image:
            id: my_image
            source: ""

        FileChooserIconView:
            id:filechooser
            on_selection:my_widget.selected(filechooser.selection)

        Button:
            text: "Predict Flower Species"
            font_size: 25
            background_normal: ''
            background_color:(153/255.0,153/255.0,0/255.0,0.5)
            color:(102/255.0,51/255.0,0/255.0,0.5)
            bold: True
            outline_color: (0/255.0,0/255.0,0/255.0,0.5)
            outline_width:3